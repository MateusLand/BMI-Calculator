<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edittext_peso"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#EBECF0"
        android:hint="Enter your weight in KGs"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:padding="8dp"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/edittext_altura"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_peso"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:background="#EBECF0"
        android:hint="Enter your height in CM"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:padding="8dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/message"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="38sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:hint="Body Mass index (BMI) is a measure of body fat based on height and weight that applies to adult men and women."
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="Calculate BMI"
        android:textColor="@color/white" />

</RelativeLayout>